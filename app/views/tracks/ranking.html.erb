<div class="uk-width-5-6 uk-margin-auto-left uk-margin-auto-right">
  <div class="uk-width-1-1 uk-text-center uk-margin-top uk-margin-bottom uk-heading-divider">
    <%= link_to "My favorites are ...?", root_path, class: "uk-text-large uk-text-lead uk-text-bold" %>
  </div>
  <%= form_with url: track_ranking_path, method: :get, class: "uk-flex uk-flex-around uk-width-5-6 uk-margin-auto-left uk-margin-auto-right" do |form| %>
    <%= form.select 'term', [["4 weeks", "short"], ["6 month", "medium"], ["1 Year", "long"]], { selected: @term }, { class: "uk-select uk-width-2-5 uk-text-bold" } %>
    <%= form.select 'limit', (5..20).to_a, { selected: @limit }, { class: "uk-select uk-width-1-3 uk-text-bold uk-height-1-1" } %>
    <%= form.submit '検索', class: "uk-button uk-button-primary uk-button-small" %>
  <% end %>
  <div class="uk-margin-top" uk-scrollspy="target: > div; cls: uk-animation-fade; target: .track; delay: 200">
    <%= render(TrackComponent.with_collection(@track_ids)) %>
  </div>
</div>